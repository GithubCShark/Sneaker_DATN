        <div class="col-xl-9 col-lg-8 col-md-7">
            <!-- Start Filter Bar -->
            <div class="filter-bar d-flex flex-wrap align-items-center">
                <div class="sorting custom-sort-product">
                    <a href="@Url.ActionLink("Products", "Home", new { sortOrder = ViewBag.PriceSortParm })">
                        <span>Giá từ: </span>
                        <i class='bx bx-sort'></i>
                    </a>
                </div>
                <div class="sorting mr-auto">
                </div>
                <div class="pagin-right pagination mt-2">
                    @Html.PagedListPager(Model, page => Url.Action("Products", new { page }))
                </div>
            </div>
            <!-- End Filter Bar -->
            <!-- Start Best Seller -->
            <section class="lattest-product-area category-list">
                <div class="row" data-aos="fade-up">
                    <!-- single product -->
                    @foreach (var item in Model)
                    {
                        if (item.Status)
                        {
                            <div class="col-lg-4 col-md-6">
                                <div class="single-product">
                                    <a asp-action="Details" asp-route-id="@item.ProductID">
                                        <img class="img-fluid" src="~/images/Product/@item.Image" alt="">
                                        @if (item.Price >= 3000000)
                                        {
                                            <div class="badge-overlay badge-products">
                                                <span class="badge">Sale 0%</span>
                                            </div>
                                        }
                                    </a>
                                    <div class="product-details">
                                        <h6 class="custom-title-product">
                                            <a class="text-decoration-none text-link-hover" data-toggle="tooltip" title="@item.ProductName" asp-action="Details" asp-route-id="@item.ProductID">
                                                @Html.DisplayFor(modelItem => item.ProductName)
                                            </a>
                                        </h6>
                                        <div class="price d-flex">
                                            <h6 class="d-flex">@string.Format("{0:0,0 vnđ}", item.Price)</h6>

                                            @if (item.Price >= 3000000)
                                            {
                                                <h6 class="d-flex l-through">@string.Format("{0:0,0 vnđ}", item.Price)</h6>
                                            }

                                        </div>
                                        <div class="prd-bottom">
                                            <a class="addProduct social-info" href="javascript:addCart(@item.ProductID);">
                                                <span class='bx bx-basket'></span>
                                                <p class="hover-text">Giỏ hàng</p>
                                            </a>
                                            <a class="social-info">
                                                <span class='bx bx-heart'></span>
                                                <p class="hover-text">Yêu thích</p>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.ProductID" class="social-info">
                                                <span class='bx bx-move'></span>
                                                <p class="hover-text">Xem Thêm</p>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    <!-- single product -->
                </div>
            </section>
            <!-- End Best Seller -->
            <!-- Start Filter Bar -->
            <div class="pagin-home filter-bar d-flex flex-wrap align-items-center">
                <div class="pagin-left sorting mr-auto">
                    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                </div>
                <div class="pagin-right pagination">
                    @Html.PagedListPager(Model, page => Url.Action("Products", new { page, sortOrder = ViewBag.SortOrder, currentFilterSearch = ViewBag.CurrentFilterSearch, currentFilterBrand = ViewBag.CurrentFilterBrand, currentFilterSize = ViewBag.CurrentFilterSize, currentFilterColor = ViewBag.CurrentFilterColor }))
                </div>
            </div>
            <!-- End Filter Bar -->
