            type: "POST",
            url: "/Home/CheckVoucher",
            data: {
                voucherCode: $("#txtVoucherCode").val(),
            },
            success: function (result) {
              /*  $('#voucher').val(price)*/
                if (result == "0") {
                    alert("Ma khuyen mai khong hop le");
                    //$("#imgCart").attr("src", '/images/cart.png');
                }
            }
        });
    }

    function orderCart() {
        $.ajax({
            type: "POST",
            url: "/Home/OrderCart",
            data: {
