@model Sneaker_DATN.Models.Discounts

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<div class="container">
    <div class="col-lg-12">
        <div class="custom-detail pt-5">
            <div class="custom-icon">
                <a class="dashbroad-icon-hover" asp-action="Index"><i class="icon-back fas fa-chevron-left fa-2x "></i></a>
                <h4 class="main-title text-center text-uppercase mt-2">Chi tiết khách hàng</h4>
                <button class="custom-icon-button">
                    <a class="font-weight-lighter" asp-action="Edit" asp-route-id="@Model.VoucherId">
                        <i class="far fa-edit" style="font-size: 1.25rem;"></i> Chỉnh sửa
                    </a>
                </button>
            </div>
            <dl class="shadow-lg">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.VoucherCode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.VoucherCode)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DayStart)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DayStart)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DayEnd)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DayEnd)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateUse)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateUse)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CustomerId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CustomerId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Status)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Classify)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Classify)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Percent)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Percent)%
                </dd>
            </dl>
        </div>
    </div>
</div>

