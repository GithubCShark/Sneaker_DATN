@model X.PagedList.IPagedList<Sneaker_DATN.Models.Orders>
@using X.PagedList.Mvc.Core;

@{
    ViewData["Title"] = "ListOrder";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<div class="color-dashboard">
    <h2 class="main-title text-center pt-4">DANH SÁCH ĐƠN HÀNG</h2>
    <div class="col-lg-12 m-auto px-5 pb-4">
        <div class="card shadow-sm">
            <div class="card-body justify-content-around">
                <div class="row col-lg-12">
                    <div class="input-group col-lg-8 col-sm-6">
                        <div class="form-outline d-flex">
                            <input type="search" class="input-group col-lg-8" placeholder="Tìm kiếm..." />
                            <button type="button" class="search-btn btn btn-primary">
                                <i class="fas fa-search"></i>
                            </button>
                            <div class="ml-3">
                                <select>
                                    <option selected>Trạng thái...</option>
                                    <option value="1">Đợi</option>
                                    <option value="2">Xác nhận</option>
                                    <option value="3">Đã giao</option>
                                </select>
                            </div>
                            <button type="button" class="search-btn btn btn-primary">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>

                    </div>
                    @*<div class="col-lg-4 col-sm-6">
                            <a asp-action="Create" class="color-btn-create btn btn-primary float-right">Thêm mới</a>
                        </div>*@
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 m-auto px-5 pb-5">
        <div class="users-table table-wrapper">
            <table class="posts-table mt-3">
                <thead>
                    <tr class="users-table-info">
                        <th>
                            @Html.DisplayNameFor(model => model.First().FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Total)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().PaymentAmount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().PhoneNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Address)
                        </th>
                        <th class="col-lg-1">
                            @Html.DisplayNameFor(model => model.First().DateCreate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Note)
                        </th>
                        @*<th>
            @Html.DisplayNameFor(model => model.Email)
        </th>*@
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td class="col-lg-2">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="col-lg-1">
                            @*@Html.DisplayFor(modelItem => item.Total)*@
                            @string.Format("{0:0,0}", item.Total)
                        </td>
                        <td class="col-lg-1">
                            @*@Html.DisplayFor(modelItem => item.Total)*@
                            @string.Format("{0:0,0}", item.PaymentAmount)
                        </td>
                        <td class="col-lg-1">
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td class="col-lg-1">
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td class="col-lg-1">
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td class="col-lg-1">
                            @Html.DisplayFor(modelItem => item.DateCreate)
                        </td>
                        <td class="col-lg-2">
                            @Html.DisplayFor(modelItem => item.Note)
                        </td>
                        @*<td class="col-lg-1">
            @Html.DisplayFor(modelItem => item.Email)
        </td>*@
                        <td class="col-lg-2">
                            <a asp-action="Edit" asp-route-id="@item.OrderID"><i class="far fa-edit dashbroad-icon-hover" style="font-size: 1.5rem;"></i></a>
                            <a asp-controller="OrderDetails" asp-action="Details" asp-route-id="@item.OrderID"><i class="far fa-eye ml-3 dashbroad-icon-hover" style="font-size: 1.5rem;"></i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-lg-12 m-auto px-5 pb-5">
        <div class="pagin-admin shadow-sm">
            <div class="pagin-left float-left">
                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            </div>
            <div class="pagin-right float-right">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    </div>
</div>
