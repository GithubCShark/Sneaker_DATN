@model X.PagedList.IPagedList<Sneaker_DATN.Models.Products>
@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "ListProducts";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<div class="color-dashboard">
    <h2 class="main-title text-center pt-4">DANH SÁCH SẢN PHẨM</h2>
    <div class="col-lg-12 m-auto px-5 pb-4">
        <div class="card shadow-sm">
            <div class="card-body justify-content-around">
                <div class="row col-lg-12">
                    <div class="input-group col-lg-8 col-sm-6">
                        <div class="form-outline d-flex">
                            <input type="search" class="input-group col-lg-8" placeholder="Tìm kiếm..." />
                            <button type="button" class="search-btn btn btn-primary">
                                <i class="fas fa-search"></i>
                            </button>
                            <div class="ml-3">
                                <select>
                                    <option selected>Trạng thái...</option>
                                    <option value="1">Hoạt động</option>
                                    <option value="2">Ngừng HĐ</option>
                                </select>
                            </div>
                            <button type="button" class="search-btn btn btn-primary">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>

                    </div>
                    <div class="col-lg-4 col-sm-6">
                        <a asp-action="Create" class="color-btn-create btn btn-primary float-right"><i class="fas fa-plus pr-2"></i>Thêm mới</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 m-auto px-5">
        <div class="users-table table-wrapper">
            <table class="posts-table mt-3" enctype="multipart/form-data">
                <thead>
                    <tr class="users-table-info">
                        <th>
                            @Html.DisplayNameFor(model => model.First().ProductName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Image)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Image1)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Image2)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Brands)
                        </th>
                        <th>
                            Size
                        </th>
                        <th>
                            Color
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                <img src="~/images/Product/@item.Image" style="width:100px; height:100px;" />
                            </td>
                            <td>
                                <img src="~/images/Product/@item.Image1" style="width: 100px; height: 100px;" />
                            </td>
                            <td>
                                <img src="~/images/Product/@item.Image2" style="width: 100px; height:100px;" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @foreach (var brd in ViewBag.brand)
                                {
                                    if (brd.BrandID == item.BrandID)
                                    {
                                        @brd.BrandName;
                                    }
                                }
                            </td>
                            <td>
                                @foreach (var sz in ViewBag.productSize)
                                {
                                    if (sz.ID == item.ProductID)
                                    {
                                        foreach (var s in ViewBag.size)
                                        {
                                            if (s.SizeID == sz.IdSize)
                                            {
                                                @string.Join(", ", s.Size);
                                            }
                                        }
                                    }
                                }
                            </td>
                            <td>
                                @foreach (var sz in ViewBag.productColor)
                                {
                                    if (sz.ID == item.ProductID)
                                    {
                                        foreach (var s in ViewBag.colors)
                                        {
                                            if (s.ColorID == sz.ColorID)
                                            {
                                                @string.Join(", ", s.Color);
                                            }
                                        }
                                    }
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ProductID"><i class="far fa-edit dashbroad-icon-hover" style="font-size: 1.5rem;"></i></a>
                                <a asp-action="Details" asp-route-id="@item.ProductID"><i class="far fa-eye ml-3 dashbroad-icon-hover" style="font-size: 1.5rem;"></i></a>                            <a asp-action="Delete" asp-route-id="@item.ProductID"><i class="far fa-trash-alt ml-3 dashbroad-icon-hover" style="font-size: 1.5rem;"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-lg-12 m-auto px-5 pb-5">
        <div class="pagin-admin shadow-sm">
            <div class="pagin-left float-left">
                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            </div>
            <div class="pagin-right float-right">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    </div>
</div>
