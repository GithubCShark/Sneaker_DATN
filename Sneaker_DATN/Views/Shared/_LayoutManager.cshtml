    //        this.className += " active";
    //    });
    //}

    var app = angular.module("myApp", ["ngRoute"]);
    app.controller("index", function ($scope, $http) {
        $scope.setac = function () {
            $scope.acdefaul = ""
            $scope.ac1 = ""
            $scope.ac2 = ""
            $scope.ac3 = ""
            $scope.ac4 = ""
            $scope.ac5 = ""
            $scope.ac6 = ""
        }
        $scope.acside = function (x) {
            if (x == "1") {
                $scope.setac();
                $scope.ac1 = "active"
            }
            else if (x == "2") {
                $scope.setac();
                $scope.ac2 = "active"
            }
            else if (x == "3") {
                $scope.setac();
                $scope.ac3 = "active"
            }
            else if (x == "4") {
                $scope.setac();
                $scope.ac4 = "active"
            }
            else if (x == "5") {
                $scope.setac();
                $scope.ac5 = "active"
            }
            else if (x == "6") {
                $scope.setac();
                $scope.ac6 = "active"
            }
            else {
                $scope.setac();
                $scope.acdefaul = "active"
            }
        }
    })
</script>