                                <li>
                                    <a ng-click="acside(3)" asp-controller="Product" asp-action="Index">Danh Sách</a>
                                </li>
                                <li>
                                    <a ng-click="acside(3)" asp-controller="Colors" asp-action="Index">Bảng Màu</a>
                                </li>
                                <li>
                                    <a ng-click="acside(3)" asp-controller="Sizes" asp-action="Index">Bảng Size</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="show-cat-btn1 {{ac4}}" href="#">
                                <span class="icon report" aria-hidden="true"></span>Thống Kê, Báo Cáo
                                <span class="category__btn1 transparent-btn" title="Open list">
                                    <span class="icon arrow-down" aria-hidden="true"></span>
                                </span>
                            </a>
                            <ul class="cat-sub-menu">
                                <li>
                                    <a ng-click="acside(4)" href="#">Thống Kê</a>
                                </li>
                                <li>
                                    <a ng-click="acside(4)" href="#">Báo Cáo</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="{{ac5}}" ng-click="acside(5)" href="#!marketing">
