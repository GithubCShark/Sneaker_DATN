@model IEnumerable<Sneaker_DATN.Models.Colors>

@{
    ViewData["Title"] = "ListColor";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}


<div class="color-dashboard">
    <h2 class="main-title text-center pt-4">DANH SÁCH MÀU</h2>
    <div class="col-lg-12 m-auto px-5 pb-5">
        <div class="users-table table-wrapper">
            <table class="posts-table mt-3">
                <thead>
                    <tr class="users-table-info">
                        <th  class="dashboard-txt">
                            @Html.DisplayNameFor(model => model.ColorID)
                        </th>
                        <th class="dashboard-txt">
                            @Html.DisplayNameFor(model => model.Color)
                        </th>
                        <th class="dashboard-icon">
                            <a asp-action="Create" class="color-btn-create btn btn-primary mr-3"><i class="fas fa-plus pr-2"></i>Thêm mới</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ColorID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Color)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ColorID"><i class="far fa-edit dashbroad-icon-hover" style="font-size: 1.5rem;"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.ColorID"><i class="far fa-trash-alt ml-3 dashbroad-icon-hover" style="font-size: 1.5rem;"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
