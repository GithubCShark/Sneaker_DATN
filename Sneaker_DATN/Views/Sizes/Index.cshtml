@model IEnumerable<Sneaker_DATN.Models.Sizes>

@{
    ViewData["Title"] = "ListSize";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}


<div class="color-dashboard">
    <h2 class="main-title text-center pt-4">DANH SÁCH SIZE</h2>
    <div class="col-lg-12 m-auto px-5 pb-4">
        <div class="card shadow-sm">
            <div class="card-body justify-content-around">
                <div class="row col-lg-12">
                    <div class="input-group col-lg-8 col-sm-6">
                        <div class="form-outline d-flex">
                            <input type="search" class="input-group col-lg-8" placeholder="Tìm kiếm..." />
                            <button type="button" class="search-btn btn btn-primary">
                                <i class="fas fa-search"></i>
                            </button>
                            @*<div class="ml-1">
                                    <select>
                                        <option selected>Trạng thái...</option>
                                        <option value="1">Hoạt động</option>
                                        <option value="2">Ngừng HĐ</option>
                                    </select>
                                </div>
                                <button type="button" class="search-btn btn btn-primary">
                                    <i class="fas fa-search"></i>
                                </button>*@
                        </div>

                    </div>
                    <div class="col-lg-4 col-sm-6">
                        <a asp-action="Create" class="color-btn-create btn btn-primary float-right"><i class="fas fa-plus pr-2"></i>Thêm mới</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 m-auto px-5">
        <div class="users-table table-wrapper">
            <table class="posts-table mt-3">
                <thead>
                    <tr class="users-table-info">
                        <th class="dashboard-txt">
                            @Html.DisplayNameFor(model => model.SizeID)
                        </th>
                        <th class="dashboard-txt">
                            @Html.DisplayNameFor(model => model.Size)
                        </th>
                        <th class="dashboard-icon"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td >
                                @Html.DisplayFor(modelItem => item.SizeID)
                            </td>
                            <td >
                                @Html.DisplayFor(modelItem => item.Size)
                            </td>
                            <td >
                                <a asp-action="Edit" asp-route-id="@item.SizeID"><i class="far fa-edit dashbroad-icon-hover" style="font-size: 1.5rem;"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.SizeID"><i class="far fa-trash-alt ml-3 dashbroad-icon-hover" style="font-size: 1.5rem;"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


