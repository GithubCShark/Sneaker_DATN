@model IEnumerable<Sneaker_DATN.Models.Sizes>

@{
    ViewData["Title"] = "ListSize";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<h2 class="main-title">DANH SÁCH SIZE</h2>
<div class="">
    <div class="col-lg-11 m-auto mt-3">
        <div class="card shadow-sm">
            <div class="card-body justify-content-around">
                <div class="row col-lg-12">
                    <div class="input-group col-lg-8 col-sm-6">
                        <div class="form-outline d-flex">
                            <input type="search" class="input-group col-lg-8" placeholder="Tìm kiếm..." />
                            <button type="button" class="search-btn btn btn-primary">
                                <i class="fas fa-search"></i>
                            </button>
                            @*<div class="ml-1">
                                    <select>
                                        <option selected>Trạng thái...</option>
                                        <option value="1">Hoạt động</option>
                                        <option value="2">Ngừng HĐ</option>
                                    </select>
                                </div>
                                <button type="button" class="search-btn btn btn-primary">
                                    <i class="fas fa-search"></i>
                                </button>*@
                        </div>

                    </div>
                    <div class="col-lg-4 col-sm-6">
                        <a asp-action="Create" class="color-btn-create btn btn-primary float-right">Thêm mới</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-11 m-auto">
        <div class="users-table table-wrapper">
            <table class="posts-table mt-3">
                <thead>
                    <tr class="users-table-info">
                        <th  class="pl-3">
                            @Html.DisplayNameFor(model => model.SizeID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Size)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SizeID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Size)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.SizeID">Sửa</a> |
                            <a asp-action="Delete" asp-route-id="@item.SizeID">Xoá</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


