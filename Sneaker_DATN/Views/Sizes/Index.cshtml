@model X.PagedList.IPagedList<Sneaker_DATN.Models.Sizes>
@using X.PagedList.Mvc.Core;

@{
    ViewData["Title"] = "ListSize";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<div class="color-dashboard">
    <h2 class="main-title text-center pt-4">DANH SÁCH SIZE</h2>
    <div class="col-lg-12 m-auto px-5">
        <div class="users-table table-wrapper">
            <table class="posts-table mt-3">
                <thead>
                    <tr class="users-table-info">
                        <th class="dashboard-txt">
                            @Html.DisplayNameFor(model => model.First().SizeID)
                        </th>
                        <th class="dashboard-txt">
                            @Html.DisplayNameFor(model => model.First().Size)
                        </th>
                        <th class="dashboard-icon">
                            <a href="@Url.Action("Create", "Sizes")" class="color-btn-create btn btn-primary btn-create-size mr-3"><i class="fas fa-plus pr-2"></i>Thêm mới</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SizeID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Size)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Sizes", new { id = @item.SizeID })" class="btn-edit-size"><i class="far fa-edit dashbroad-icon-hover" style="font-size: 1.5rem;"></i></a>
                                <a href="@Url.Action("Delete", "Sizes", new { id = item.SizeID })" class="btn-delete-size"><i class="far fa-trash-alt ml-3 dashbroad-icon-hover" style="font-size: 1.5rem;"></i></a>
                                <input type="hidden" class="id" value="@item.SizeID" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-lg-12 m-auto px-5 pb-5">
        <div class="pagin-admin shadow-sm">
            <div class="pagin-left float-left">
                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            </div>
            <div class="pagin-right float-right">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    </div>
</div>


<!-- Modal Create Size -->
<div class="modal fade" id="createSizeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <!-- empty -->
    </div>
</div>

<!-- Modal Edit Size -->
<div class="modal fade" id="editSizeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <!-- empty -->
    </div>
</div>

<!-- Modal Details -->
<div class="modal fade" id="deleteSizeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <!-- empty -->
    </div>
</div>


