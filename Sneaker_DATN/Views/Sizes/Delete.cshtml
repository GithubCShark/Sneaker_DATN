@model Sneaker_DATN.Models.Sizes

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<div class="row pt-3 text-muted">
    <h1 class="text-muted ml-2">Xóa!</h1>

    <h4 class="ml-4">CỠ SIZE</h4>
    <hr />
    <div class="m-auto">
        <div class="col-lg-6">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Size)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Size)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="SizeID" />
                <input type="submit" value="Xoá" class="btn btn-danger" /> |
                <a asp-action="Index">Trở về danh sách</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
